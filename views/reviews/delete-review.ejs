<h1><%= title %></h1>

<% if (message) { %>
  <div class="flash-message"><%= message %></div>
<% } %>

<h2>Are you sure you want to delete this review?</h2>

<p><strong>Vehicle:</strong> <%= reviewData.inv_year %> <%= reviewData.inv_make %> <%= reviewData.inv_model %></p>
<p><strong>Review:</strong> <%= reviewData.review_text %></p>

<form action="/review/delete" method="post">
  <input type="hidden" name="review_id" value="<%= reviewData.review_id %>">
  <button type="submit" class="btn-danger">Delete Review</button>
  <a href="/account/">Cancel</a>
</form>