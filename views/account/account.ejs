    <div class="flash-message"><%= message %></div>
  <% } %>

  <!-- Errors -->
  <% if (errors && errors.length > 0) { %>
    <ul class="error-list">
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

